<!-- Section: Design Block -->
<section class="text-center text-lg-start">
    <!-- Jumbotron -->
    <div class="container py-4">
        <div class="row g-0 align-items-center">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <div class="card cascading-right" style="
            background: hsla(0, 0%, 100%, 0.55);
            backdrop-filter: blur(30px);
            ">
                    <div class="card-body p-5 shadow-5 text-center">
                        <h2 class="fw-bold mb-5">Details Product</h2>
                        <div class="card-header">
                            <h5 class="card-title">{{ ironman.name }}</h5>
                            <img src="{{ ironman.image }}" alt="" width="380">
                        </div>
                        <div class="card-body">
                            <p class="card-text">Type: {{ ironman.type }}</p>
                            <p class="card-text">Price: ${{ ironman.price }}</p>
                            <p class="card-text">Size: {{ ironman.size }}</p>
                            <p class="card-text">Status: {{ ironman.status }}</p>
                            <p class="card-text">Quantity: {{ ironman.quantity }}</p>
                            <a href="/ironman/cart" class="btn btn-warning">Add to cart</a>
                            <a href="/ironman/buynow" class="btn btn-success">Buy now</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 mb-5 mb-lg-0">
                <img src="{{ironman.image1}}" class="w-100 rounded-4 shadow-4" alt="" />
            </div>
        </div>
    </div>
    <!-- Jumbotron -->
</section>
<!-- Section: Design Block -->