<form action="/adminpage/add/{{_id}}" method="post" class="custom-form">
    <h1 class="form-title">Add Product Admin</h1>
    <div class="container">
        <form class="well form-horizontal" action=" " method="post" id="edit_form">
            <fieldset>
                <div class="form-group">
                    <label class="control-label">Name</label>
                    <div class="inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fas fa-user"></i></span>
                            <input name="name" placeholder="Name" class="form-control" type="text"
                                value="{{ adminpage.name }}">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label">Type</label>
                    <div class="inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fas fa-th"></i></span>
                            <input name="type" placeholder="Type" class="form-control" type="text"
                                value="{{ adminpage.type }}">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label">Price</label>
                    <div class="inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fas fa-dollar-sign"></i></span>
                            <input name="price" placeholder="Price" class="form-control" type="text"
                                value="{{ adminpage.price }}">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label">Size</label>
                    <div class="inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fas fa-ruler"></i></span>
                            <input name="size" placeholder="Size" class="form-control" type="text"
                                value="{{ adminpage.size }}">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label">Status</label>
                    <div class="inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fas fa-info-circle"></i></span>
                            <input name="status" placeholder="Status" class="form-control" type="text"
                                value="{{ adminpage.status }}">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label">Quantity</label>
                    <div class="inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fas fa-cubes"></i></span>
                            <input name="quantity" placeholder="Quantity" class="form-control" type="text"
                                value="{{ adminpage.quantity }}">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label">Image URL</label>
                    <div class="inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fas fa-image"></i></span>
                            <input type="url" name="image" placeholder="Image URL" class="form-control"
                                value="{{ adminpage.image }}">
                        </div>
                        <div class="text-center">
                        </div>
                    </div>
                    <div class="inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fas fa-image"></i></span>
                            <input type="url" name="image1" placeholder="Image URL" class="form-control"
                                value="{{ adminpage.image1 }}">
                        </div>
                        <div class="text-center">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label"></label>
                    <div class="button-container">
                        <button type="submit" class="btn btn-warning"> Submit <i class="fas fa-save"></i></button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</form>